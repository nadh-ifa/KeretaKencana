import java.util.ArrayList;
import java.util.Scanner;

class Passenger {
    String name;
    String location;
    String gender;

    Passenger(String name, String location, String gender) {
        this.name = name;
        this.location = location;
        this.gender = gender;
    }
}

public class Penumpang {
    static Scanner scanner = new Scanner(System.in);

    public static void main(String[] args) {

        System.out.println("Hello, princess passengers!");
        System.out.print("Kenalan dong, nama kamu siapa?: ");
        String passengerName = scanner.nextLine();
        
        System.out.print("Apakah kamu seorang perempuan? (y/n): ");
        String passengerGender = scanner.nextLine();

        // Memastikan jika input 'y' maka lanjut, jika 'n' maka keluar
        if (passengerGender.equalsIgnoreCase("y")) {
            // Jika perempuan, lanjutkan ke pertanyaan selanjutnya
            System.out.print("Mau kemana hari ini, cantiknya aku?: ");
            String passengerLocation = scanner.nextLine();

            System.out.println("Oke, ayo cari driver!");
            Passenger passenger = new Passenger(passengerName, passengerLocation, "Perempuan");
        } else {
            System.out.println("Eits...Girls only ya!");
        }
    }
}
